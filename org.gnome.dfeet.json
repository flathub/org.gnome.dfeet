{
    "id": "org.gnome.dfeet",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "d-feet",
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=wayland",
        "--socket=system-bus", "--socket=session-bus",
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "env": {
            "PYTHON": "/usr/bin/python3"
        }
    },
    "modules": [
        {
            "name": "pycairo",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/pygobject/pycairo/releases/download/v1.17.1/pycairo-1.17.1.tar.gz",
                    "sha256": "0f0a35ec923d87bc495f6753b1e540fd046d95db56a35250c44089fbce03b698"
                }
            ],
            "cleanup": [
                "/include",
                "/share/pkgconfig"
            ]
        },
        {
            "name": "pygobject",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app"
            ],
            "ensure-writable" : [
                "/lib/python*/site-packages/easy-install.pth"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pygobject/3.30/pygobject-3.30.1.tar.xz",
                    "sha256": "e1335b70e36885bf1ae207ec1283a369b8fc3e080688046c1edb5a676edc11ce"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib/python*/site-packages/gi/*.la"
            ]
        },
        {
            "name": "d-feet",
            "rm-configure": true,
            "config-opts": [
                "--disable-tests"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/d-feet/0.3/d-feet-0.3.14.tar.xz",
                    "sha256": "eedc20a97e7eee4cce9348a19565db8f5e0947abbf74e34f0711ca4279e414d5"
                }
            ]
        }
    ]
}
